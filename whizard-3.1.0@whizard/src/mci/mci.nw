       end if
       call pac_fmt (fmt, FMT_14, "3x," // FMT_10 // ",1x", suppress)
       call pac_fmt (fmt2, "1x,F6.2", "2x,F5.1", suppress)
       write (buffer, "(1x,I3,1x,I10)") entry%it, entry%n_calls
       if (verb > 1) then
