            "1x,F7.2,A1," // fmt2 // ")") &
            trim (buffer), &
            entry%integral, &
            abs(entry%error), &
            abs(integration_entry_get_relative_error (entry)) * 100, &
            abs(integration_entry_get_accuracy (entry)), &
            star, &
            entry%efficiency * 100
       if (verb > 2) then
