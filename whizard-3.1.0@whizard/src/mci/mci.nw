    case (0)
       if (.not. final_it) return
    case (1)
    case(2:)
       if (.not. (final_it &
            .or. mod (it, mci%grid_checkpoint) == 0)) return
    case default
       call msg_bug ("VAMP2: Grid checkpoint must be a positive integer.")
    end select
