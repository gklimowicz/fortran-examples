                       if (all (entry%block_index == block_index)) then
                          par_data => model%par(entry%i_par)%data
                          return
                       end if
                    end if
                  end associate
               end do
            end if
          end associate
       end do
    end if
    
  end subroutine model_slha_lookup
    
