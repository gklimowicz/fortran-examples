    write (u, "(A)")

    select type (eio)
    class is (eio_direct_t)
       call eio%set_momentum (p([1,2,4,3]), on_shell=.true.)
       call eio%write (u)
    end select

    write (u, "(A)")
    write (u, "(A)")  "* 'read' i_prc"
    write (u, "(A)")

    call eio%input_i_prc (i_prc, iostat)
    write (u, "(1x,A,1x,I0)")  "i_prc =", i_prc
    write (u, "(1x,A,1x,I0)")  "iostat =", iostat

